extends ../base.jade

// [START form]
block content
  h3 #{action} receipt
  form(method="POST", enctype="multipart/form-data")
    .form-group
      label(for="date") Date
      input.form-control(type="date", name="date", id="date", value=receipt.date)
    .form-group
      label(for="items") Items
      each item in receipt.items
        input.form-control(type="text", name="items", id="items", value=item)
    .form-group
      label(for="total") Total
      input.form-control(type="text", name="total", id="total", value=receipt.total)
    .form-group
      label(for="image") Receipt Image
      input.form-control(type="file", name="image", id="image")
    .form-group.hidden(style="display: none")
      label(for="imageUrl") Receipt Image URL
      input.form-control(type="text", name="imageUrl", id="imageUrl", value=receipt.imageUrl, style="display: hidden")
    button.btn.btn-success(type="submit") Save
// [END form]
