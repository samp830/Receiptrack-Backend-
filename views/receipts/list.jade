extends ../base.jade

block content
  h3 Receipts

  a.btn-floating.btn-large.waves-effect.waves-light(href="/receipts/add", style="position: fixed; right: 1vw; bottom: 1vw; z-index: 3")
    i.material-icons add

  each receipt in receipts
    .row
      .col.s12.m6
        .card
          .card-image
            img(src=receipt.imageUrl)
            span.card-title= receipt.date
            a.btn-floating.halfway-fab.waves-effect
              i.material-icons edit
            .card-content
              p= receipt.total

  if !receipts.length
    p No receipts found.

  if nextPageToken
    nav
      ul.pager
        li
          a(href="?pageToken=#{encodeURIComponent(nextPageToken)}") More
